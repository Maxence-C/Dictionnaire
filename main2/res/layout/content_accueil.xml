<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/content_accueil"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="com.dictionnaire.maxence.dictionnaire.Accueil"
tools:showIn="@layout/activity_accueil">

    <LinearLayout
        android:id = "@+id/Everything"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listeDictionnaires"></ListView>

    </LinearLayout>

    <FrameLayout
        android:id = "@+id/Overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:gravity="center_vertical" android:visibility="invisible"
        >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:src="@android:color/black"
            android:alpha="0.6"
            />


        <EditText
            android:layout_width="146dp"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText" />

        <EditText
            android:layout_width="138dp"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="115dp"
            android:layout_height="53dp"
            android:id="@+id/editText2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:id="@+id/Valider"
            android:layout_marginLeft="100dp"
            android:text="Valider"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="190dp"
            android:id="@+id/annuler"
            android:text="Annuler"/>


    </FrameLayout>


</FrameLayout>
